#!/bin/bash

if [ -z $3 ]; then
    echo Missing parameters
    exit 1
fi

cp -r ./input/ ./${1}-${2}-${3}/
cd ${1}-${2}-${3}/
cat ../input/run.slurm | sed -e "s/job-name=1-1-1/job-name=${1}-${2}-${3}/g" -e "s/nodes=1/nodes=${1}/g" -e "s/ntasks-per-node=1/ntasks-per-node=${2}/g" -e "s/cpus-per-task=1/cpus-per-task=${3}/g"> ./run.slurm
sbatch run.slurm